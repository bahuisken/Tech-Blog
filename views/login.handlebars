<div class="row">
  <div class="col-md-6 mx-auto" id="login-form">
    <h2 class="mb-5">LOGIN:</h2>

    <form class="form login-form" autocomplete="off">
      <div class="form-group">
        <label for="email-login">Email Address:</label>
        <input class="form-control" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <h2 id="login-error"></h2>
        <button class="btn btn-primary" type="submit">Login</button> <button class="btn btn-primary"
          id="create-account-btn">Create
          Account</button>

      </div>
    </form>
  </div>


  <div class="col-md-6 mx-auto" id="create-account-form">
    <h2 class="mb-5">CREATE ACCOUNT: </h2>

    <form class="form signup-form" autocomplete="off">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email Address:</label>
        <input class="form-control" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Create Account</button> <button class="btn btn-primary"
          id="login-btn">Login</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>